{
    "name": "object-calisthenics/phpcs-calisthenics-rules",
    "description": "PHP CodeSniffer Object Calisthenics rules/sniffs",
    "license": "MIT",
    "type": "phpcodesniffer-standard",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/javer/coding-standard.git"
        },
        {
            "type": "package",
            "package": {
                "name": "aboks/graphql-relay-php",
                "type": "package",
                "version": "0.1.0",
                "source": {
                    "url": "git@github.com:aboks/graphql-relay-php.git",
                    "type": "git",
                    "reference": "php8"
                }
            }
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "nette/utils": "^3.1",
        "slevomat/coding-standard": "dev-fix-phpdoc-parser-dependency",
        "squizlabs/php_codesniffer": "dev-master"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.38",
        "phpunit/phpunit": "^9.3",
        "rector/rector": "^0.8.6",
        "tracy/tracy": "^2.7",
        "phpstan/phpdoc-parser": "^0.4.9",
        "migrify/config-transformer": "^0.3.35"
    },
    "autoload": {
        "psr-4": {
            "ObjectCalisthenics\\": "src/ObjectCalisthenics"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObjectCalisthenics\\Tests\\": "tests"
        }
    },
    "scripts": {
        "complete-check": ["@phpstan", "@check-cs", "phpunit"],
        "phpstan": "phpstan analyze src tests --error-format symplify --ansi",
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --fix --ansi",
        "changelog": "changelog-linker dump-merges",
        "rector": "rector process --dry-run --config rector-ci.php --ansi"
    }
}
